CC = gcc
SRC := main.c school.c
OBJ := $(SRC:.c=.o)
NAME = school
CFLAGS := -Wall -Werror -Wextra -pedantic
RM := rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	@$(RM) *~ $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean
	@$(RM) $(NAME)

re: fclean all

m.h:
	@echo "Error: m.h is missing" >&2
	@false

